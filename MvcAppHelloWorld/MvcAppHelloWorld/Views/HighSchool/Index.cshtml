@model List<MvcAppHelloWorld.ViewModels.HighSchoolViewModel>

@{
ViewBag.Title = "High School Learners";
}

<h2>High School Learners</h2>

<form method="get" action="@Url.Action("Search", "HighSchool")" class="form-inline">
    <div class="form-group">
        <input type="text" name="searchTerm" placeholder="Search by name or school" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>
<br/>
@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Surname</th>
        <th>Date of birth</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Address</th>
        <th>School name</th>
        <th>Date of entry</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var learner in Model)
    {
    <tr>
        <td>@learner.Name</td>
        <td>@learner.Surname</td>
        <td>@learner.DateOfBirth.ToString("dd/MM/yyyy")</td>
        <td>@learner.Email</td>
        <td>@learner.Phone</td>
        <td>@learner.Address</td>
        <td>@learner.SchoolName</td>
        <td>@learner.DateOfEntry.ToString("dd/MM/yyyy")</td>
        <td>
            @Html.ActionLink("Details", "EditDetails", new { id = learner.Id }, new { @class = "btn btn-info" })
            @Html.ActionLink("Delete", "Delete", new { id = learner.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
    }
    </tbody>
</table>
